<article class="post">
  <div class="title">
    <a href="/post/{{id}}">{{title}}</a>
  </div>
  <div class="post_description">
    {{post_description}}
  </div>
  <div class="meta">
    {{user.username}}
    on
    {{format_date created_at}}
    |
    {{comments.length}}
    {{format_plural "comment" comments.length}}
  </div>
</article>